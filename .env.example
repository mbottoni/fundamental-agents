# --- Security ---
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=changeme_generate_a_secure_key_at_least_32_characters

# --- Database ---
DATABASE_URL=postgresql://user:password@db:5432/stock-analyzer

# --- External APIs ---
# Get your key at https://financialmodelingprep.com/
FINANCIAL_MODELING_PREP_API_KEY=your_fmp_api_key
# Get your key at https://newsapi.org/
NEWS_API_KEY=your_news_api_key

# --- Stripe ---
# Get these from https://dashboard.stripe.com/
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_PREMIUM_PRICE_ID=price_your_premium_plan_price_id

